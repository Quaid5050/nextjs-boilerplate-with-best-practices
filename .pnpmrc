# pnpm configuration
# See https://pnpm.io/npmrc for more options

# Use strict peer dependencies
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Shamefully hoist (for compatibility with some packages)
shamefully-hoist=false

# Public hoist pattern (for packages that need to be hoisted)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

